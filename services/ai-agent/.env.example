# AI Agent Service Configuration

# LLM Provider (choose one or configure both)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
DEFAULT_LLM_PROVIDER=anthropic  # 'openai' or 'anthropic'
DEFAULT_MODEL=claude-sonnet-3.5  # or gpt-4-turbo

# Supabase
SUPABASE_URL=http://localhost:54321
SUPABASE_SERVICE_KEY=your-service-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# Database (for direct pgvector access)
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# Embedding Configuration
EMBEDDING_PROVIDER=ollama  # 'openai' or 'ollama'

# Choose ONE (uncomment the one you want):
EMBEDDING_MODEL=nomic-embed-text  # Nomic (768 dim) - RECOMMENDED
# EMBEDDING_MODEL=bge-m3  # BGE-M3 (1024 dim) - What you have installed
# EMBEDDING_MODEL=all-minilm  # All-MiniLM (384 dim) - Fastest
# EMBEDDING_MODEL=text-embedding-ada-002  # OpenAI (1536 dim) - Paid

# Set dimensions to match your model:
EMBEDDING_DIMENSIONS=768  # nomic-embed-text
# EMBEDDING_DIMENSIONS=1024  # bge-m3
# EMBEDDING_DIMENSIONS=384  # all-minilm
# EMBEDDING_DIMENSIONS=1536  # OpenAI

# RAG Configuration
RAG_TOP_K=5  # Number of knowledge base entries to retrieve
RAG_SIMILARITY_THRESHOLD=0.7  # Minimum similarity score (0-1)

# Agent Configuration
MAX_TOOL_ITERATIONS=5
ENABLE_TASK_SUGGESTIONS=true
ENABLE_PROJECT_CONTEXT=true

# Server
HOST=0.0.0.0
PORT=8001
LOG_LEVEL=info
