{
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev:sb": "cd infra && supabase start",
    "dev:web": "cd apps/web && vite --host --port 5173",
    "dev": "npm-run-all -s dev:sb dev:web",
    "stop": "cd infra && supabase stop"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "vite": "^5.4.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "docx": "^9.5.1"
  }
}
